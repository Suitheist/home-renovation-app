# Environment variables for Home Renovation App

# Airtable Configuration (MVP)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Notion Configuration (Future integration)
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here
NOTION_PRD_PAGE_ID=0cede93e-2ae8-4b3b-b6b7-f48664145beb

# OpenAI Configuration (AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Database Configuration (Future PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/home_renovation_app

# File Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_REGION=us-east-1

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here

# PRD Sync Configuration
PRD_SYNC_ENABLED=true
PRD_AUTO_SYNC=false
